<graph id="cloud">
  <version>1.0</version>

  <!--
      Generate the following masks:
      
      IDEPIX_INVALID, IDEPIX_CLOUD, IDEPIX_CLOUD_AMBIGUOUS,
      IDEPIX_CLOUD_SURE, IDEPIX_CLOUD_BUFFER, IDEPIX__CLOUD_SHADOW,
      IDEPIX_SNOW_ICE, IDEPIX_BRIGHT, IDEPIX_WHITE, IDEPIX_COASTLINE,
      IDEPIX_LAND
  -->

  <node id="Read">
    <operator>Read</operator>
    <parameters>
      <file>${pathfile}</file>
      <formatName>Sen3</formatName>
      <!--Sen3 ensures that SLSTR is read as multisize-->
    </parameters>
  </node>

  <node id="Resample">
    <operator>Resample</operator>
    <sources>
      <sourceProduct refid="Read"/>
    </sources>
    <parameters>
      <targetWidth>1000</targetWidth>
      <targetHeight>840</targetHeight>
      <referenceBand/>
      <targetResolution/>
      <upsampling>Nearest</upsampling>
      <downsampling>First</downsampling>
      <flagDownsampling>First</flagDownsampling>
      <resampleOnPyramidLevels>true</resampleOnPyramidLevels>
    </parameters>
  </node>

  
  <node id="CloudID">
    <operator>Snap.Idepix.Olci.S3Snow</operator>
    <sources>
      <sourceProduct>Resample</sourceProduct>
    </sources>
    <parameters>
      <demBandName>band_1</demBandName>
    </parameters>
  </node>

  <node id="Reproject">
    <operator>Reproject</operator>
    <sources>
      <source>CloudID</source>
    </sources>
    <parameters>
      <crs>EPSG:3413</crs>
      <resampling>Nearest</resampling>
      <noDataValue>NaN</noDataValue>
      <includeTiePointGrids>true</includeTiePointGrids>
    </parameters>
  </node>
  
  <node id="BandSelect_cloud01">
    <operator>BandSelect</operator>
    <sources>
      <source>Reproject</source>
    </sources>
    <parameters>
      <sourceBands>cloud_over_snow</sourceBands>
    </parameters>
  </node>
  <node id="Write_cloud01">
    <operator>Write</operator>
    <sources>
      <sourceProduct>BandSelect_cloud01</sourceProduct>
    </sources>
    <parameters>
      <file>${targetFolder}/cloud_over_snow_x.tif</file>
      <formatName>GeoTIFF</formatName>
    </parameters>
  </node>

