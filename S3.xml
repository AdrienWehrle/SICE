<graph id="S3">
  <version>1.0</version>

  <!--
      + Read
        + Idepix > BandSelect (cloud, cloud_sure, cloud_ambiguous) > Write
        + Rad2Refl > BandSelect (Bands 01-21, SZA, etc.) > Write
  -->

  
  <!--
      Notes:

      + GPT bug means we can't write out band.tif, but have to use some other name. I chose "band_x.tif".
  -->

  <node id="Read_OLCI">
    <operator>Read</operator>
    <parameters>
      <file>${OLCIsource}/xfdumanifest.xml</file>
      <formatName>Sen3</formatName>
      <!-- https://forum.step.esa.int/t/error-when-selecting-multiple-bands-from-slstr-file/15319 -->
      <!-- Sen3 ensures that SLSTR is read as multisize -->
    </parameters>
  </node>

