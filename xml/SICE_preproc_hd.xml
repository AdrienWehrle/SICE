  <version>1.0</version>

  <!--
      This script runs the radiance to reflectance and outputs:
      reflectance: 1,2,4,5,6,7,8,9,13,14,15,17,21
      other: SZA, SAA, OZA, OAA
      in csv format
  -->
  <node id="Read">
    <operator>Read</operator>
    <parameters>
      <file>${pathfile}</file>
      <formatName>Sen3</formatName>
      <!--Sen3 ensures that SLSTR is read as multisize-->
    </parameters>
  </node>
  
